    "keywords": [
        "telegram",
        "files",
        "bot"
    ],
    "repository": "https://github.com/bubukalang/Save_bot",
    "website": "https://github.com/bubukalang/Save_bot",
    "success_url": "https://t.me/SaveRestrictedVideo",
    "env": {
        "ID": {
          "description": "Get this value from my.telegram.org",
          "required": true
        },
